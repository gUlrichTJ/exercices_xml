<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE description_terre [
    <!ENTITY croute_oceanique "croute océanique">
    <!ENTITY croute_continentale "croute continentale">
    <!ENTITY manteau_superieur "manteau superieur">
    <!ENTITY manteau_inferieur "manteau inferieur">
    <!ENTITY noyau_externe "noyau externe">
    <!ENTITY noyau_interne "noyau interne">
]>

<description_terre>
    <nom>Structure interne de la terre</nom>
    <couche1>
        <nom>Croute terrestre</nom>
        <niveau>Extérieur</niveau>
        <types_de_croute>
            &croute_oceanique;
                <roche>basalte</roche>
                <densite>3</densite>
                <epaisseur>6</epaisseur>
                <unite>km</unite>
            &croute_oceanique;

            &croute_continentale;
                <roche>granite</roche>
                <densite>2.7</densite>
                <epaisseur>35</epaisseur>
                <unite>km</unite>
            &croute_continentale;
        </types_de_croute>
    </couche1>

    <couche2>
        <nom>Manteau</nom>
        <type_manteau>
            &manteau_superieur;
                <niveau>Milieu</niveau>
                <epaisseur>650</epaisseur>
                <unite>km</unite>
                <densite>3.3</densite>
                <mineraux>
                    <mineral>Olivine</mineral>
                    <mineral>Pyroxene</mineral>
                </mineraux>
            &manteau_superieur;

            &manteau_inferieur;
                <niveau>Bas</niveau>
                <epaisseur>2200</epaisseur>
                <unite>km</unite>
                <densite>6</densite>
                <mineral>Pérovskite</mineral>
            &manteau_inferieur;
        </type_manteau>
    </couche2>

    <couche3>
        <nom>Noyau</nom>
        <niveau>Très bas</niveau>
        <type_noyau>
            &noyau_externe;
                <epaisseur>200</epaisseur>
                <unite>km</unite>
                <densite>10</densite>
                <roches>
                    <roche>Fer</roche>
                    <roche>Nickel</roche>
                </roches>
            &noyau_externe;

            &noyau_interne;
                <second_nom>Graine</second_nom>
                <epaisseur>1200</epaisseur>
                <unite>km</unite>
                <densite>13</densite>
                <roche>Fer</roche>
            &noyau_interne;
        </type_noyau>
    </couche3>
</description_terre>